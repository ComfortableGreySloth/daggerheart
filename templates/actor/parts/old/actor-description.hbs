<div class="char-sheet looks-description">
  <div class="char-sheet-looks">
    <div class="section-title accordion active" data-to-open="description-accordion">Description</div>
    <div class="accordion-content active" data-accordion="description-accordion">
      <div>
        <label for="system.looks.clothes">Clothes that are:</label>
        <input type="text" name="system.looks.clothes" value="{{system.looks.clothes}}" />
      </div>
      <div>
        <label for="system.looks.eyes">Eyes like:</label>
        <input type="text" name="system.looks.eyes" value="{{system.looks.eyes}}" />
      </div>
      <div>
        <label for="system.looks.body">Body that's:</label>
        <input type="text" name="system.looks.body" value="{{system.looks.body}}" />
      </div>
      <div>
        <label for="system.looks.skin">The color of:</label>
        <input type="text" name="system.looks.skin" value="{{system.looks.skin}}" />
      </div>
      <div>
        <label for="system.looks.attitude">Attitude like</label>
        <input type="text" name="system.looks.attitude" value="{{system.looks.attitude}}" />
      </div>
    </div>

  </div>
  <div class="char-sheet-description">
    <div class="section-title accordion active" data-to-open="description-biography">Biography</div>
    <div class="editor-wrap accordion-content active" data-accordion="description-biography">
      {{editor system.biography target="system.biography" button=true owner=owner editable=editable}}
    </div>

  </div>
</div>


<div class="char-sheet questions-connections">
  <div class="character-sheet-questions character-description">
    <div class="section-title accordion active" data-to-open="bg-questions">Background Questions</div>
    <div class="accordion-content active bio-wrap" data-accordion="bg-questions">
      {{#each system.class.questions as |question key|}}
      <div class="bio-input-group">
        <label>{{question.question}}</label>
        <input type="text" name="system.class.questions.{{key}}.answer" value="{{question.answer}}" />
        <input type="hidden" name="system.class.questions.{{key}}.id" value="{{question.id}}" />
        <input type="hidden" name="system.class.questions.{{key}}.question" value="{{question.question}}" />
      </div>
      {{/each}}
    </div>
  </div>

  <div class="character-sheet-connection character-description">
    <div class="section-title accordion active" data-to-open="connections">Connections</div>
    <div class="accordion-content active bio-wrap" data-accordion="connections">
      {{#each system.class.connections as |connections key|}}
      <div class="bio-input-group">
        <label>{{connections.question}}</label>
        <input type="text" name="system.class.connections.{{key}}.answer" value="{{connections.answer}}" />
        <input type="hidden" name="system.class.connections.{{key}}.id" value="{{connections.id}}" />
        <input type="hidden" name="system.class.connections.{{key}}.question" value="{{connections.question}}" />
      </div>
      {{/each}}
    </div>
  </div>
</div>