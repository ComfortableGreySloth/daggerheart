<form class="{{cssClass}} item-sheet weapon" autocomplete="off">
  <div class="item-wrap flex items-center column gap-10">
    <img class="img-wrap" width="128" height="128" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="item-info flex column gap-10 w-100">
      <label class="label strong" for="name">Name</label>
      <input class="input w-100" name="name" type="text" value="{{item.name}}" placeholder="Name" />
    </div>

    <div class="flex items-center justify-between w-100">
      <label class="label strong" for="system.hasTracker.enabled">Card Tracker?</label>
      <input type="checkbox" name="system.hasTracker.enabled" {{checked system.hasTracker.enabled}} />
    </div>

    <div class="flex gap-10 w-100">
      <div class="w-100">
        <label class="label strong" for="system.domain">Domain</label>
        <select class="input w-100" name="system.domain" class="w-100">
          {{selectOptions domains selected=system.domain}}
        </select>
      </div>

      <div class="w-100">
        <label class="label strong" for="system.domainType">Type</label>
        <input class="input w-100" type="text" name="system.domainType" value="{{system.domainType}}" />
      </div>

      <div class="w-100">
        <label class="label strong" for="system.recall">Recall</label>
        <input class="input w-100" type="number" name="system.recall" value="{{system.recall}}" />
      </div>
    </div>
    <div class="flex column gap-10 w-100">
      <label class="label strong" for="system.feature">Feature</label>
      {{editor system.feature target="system.feature" class="simple h150 white" owner=owner}}
    </div>
  </div>
</form>